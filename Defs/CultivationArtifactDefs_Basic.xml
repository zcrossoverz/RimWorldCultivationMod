  <!-- Common Tier Artifacts -->
  <CultivationArtifactDef>
    <defName>CultivationArtifact_IronSword</defName>
    <label>Iron Cultivation Sword</label>
    <description>A basic iron sword infused with cultivation energy. Provides modest combat bonuses and auto-attacks nearby enemies.</description>
    
    <rarity>Common</rarity>
    <artifactType>Sword</artifactType>
    <requiredRealmLevel>0</requiredRealmLevel>
    <requiredStage>1</requiredStage>
    <equipmentType>Primary</equipmentType>
    
    <!-- ELO & Stat Ranges for Common Sword -->
    <eloRange><min>100</min><max>200</max></eloRange>
    <damageRange><min>15</min><max>25</max></damageRange>
    <qiPoolRange><min>50</min><max>80</max></qiPoolRange>
    <rangeMultiplier><min>0.8</min><max>1.0</max></rangeMultiplier>
    <accuracyRange><min>0.70</min><max>0.80</max></accuracyRange>
    <cooldownRange><min>150</min><max>210</max></cooldownRange>
    
    <!-- Auto-behaviors -->
    <hasAutoAttack>true</hasAutoAttack>
    <detectionRadius>10</detectionRadius>
    <qiAbsorptionRate>1.0</qiAbsorptionRate>
    <qiEfficiency>1.0</qiEfficiency>
    
    <!-- Buff generation -->
    <buffCountRange><min>1</min><max>2</max></buffCountRange>
    <primaryBuffCategories>
      <li>Combat</li>
    </primaryBuffCategories>
    <secondaryBuffCategories>
      <li>Cultivation</li>
    </secondaryBuffCategories>
  </CultivationArtifactDef>

  <CultivationArtifactDef>
    <defName>CultivationArtifact_ClothRobe</defName>
    <label>Cloth Cultivation Robe</label>
