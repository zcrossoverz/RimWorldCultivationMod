    <damageRange><min>0</min><max>0</max></damageRange> <!-- No combat damage -->
    <qiPoolRange><min>30</min><max>60</max></qiPoolRange>
    <rangeMultiplier><min>1.0</min><max>1.0</max></rangeMultiplier>
    <accuracyRange><min>1.0</min><max>1.0</max></accuracyRange>
    <cooldownRange><min>300</min><max>300</max></cooldownRange>
    
    <!-- Passive behaviors -->
    <hasAutoAttack>false</hasAutoAttack>
    <detectionRadius>0</detectionRadius>
    <qiAbsorptionRate>0.5</qiAbsorptionRate>
