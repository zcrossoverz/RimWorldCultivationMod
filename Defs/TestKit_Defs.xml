<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ✅ Test Kit cho Tu Tiên Artifacts -->
  
  <!-- Test Kit Item -->
  <ThingDef>
    <defName>TuTien_TestKit</defName>
    <label>Tu Tiên Test Kit</label>
    <description>A special testing kit that spawns cultivation artifacts when used. Click to use and spawn all test artifacts nearby.</description>
    
    <!-- Basic settings -->
    <thingClass>TuTien.Testing.TestKitThing</thingClass>
    <category>Item</category>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Knife</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <useHitPoints>false</useHitPoints>
    <pathCost>14</pathCost>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <drawGUIOverlay>false</drawGUIOverlay>
    
    <!-- Minimal Stats -->
    <statBases>
      <Mass>0.1</Mass>
      <MarketValue>1</MarketValue>
    </statBases>
  </ThingDef>

  <!-- Research để unlock Test Kit -->
  <ResearchProjectDef>
    <defName>TuTien_TestKitResearch</defName>
    <label>Tu Tiên Testing</label>
    <description>Enables creation of Tu Tiên test kit for spawning cultivation artifacts.</description>
    <baseCost>50</baseCost>
    <techLevel>Medieval</techLevel>
    <prerequisites>
      <li>ComplexClothing</li>
    </prerequisites>
    <researchViewX>0</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>

  <!-- Recipe để craft Test Kit -->
  <RecipeDef>
    <defName>Make_TuTien_TestKit</defName>
    <label>make Tu Tiên test kit</label>
    <description>Create a testing kit for Tu Tiên cultivation artifacts.</description>
    <jobString>Making Tu Tiên test kit.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>100</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <TuTien_TestKit>1</TuTien_TestKit>
    </products>
    <skillRequirements>
      <Crafting>0</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>TableMachining</li>
    </recipeUsers>
    <researchPrerequisite>TuTien_TestKitResearch</researchPrerequisite>
  </RecipeDef>

</Defs>
