<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <!-- Basic Sword Strike Ability -->
  <TuTien.CultivationAbilityDef>
    <defName>Ability_SwordStrike</defName>
    <label>Sword Strike</label>
    <description>A basic sword technique that deals extra damage.</description>
    <abilityLabel>Sword Strike</abilityLabel>
    <abilityDescription>Channel Qi into your blade for a powerful strike.</abilityDescription>
    
    <category>Combat</category>
    <qiCost>5</qiCost>
    <cooldownTicks>180</cooldownTicks>
    <requiredRealm>0</requiredRealm>
    <requiredStage>1</requiredStage>
    
    <targetType>Touch</targetType>
    <range>1.5</range>
    <requiresLineOfSight>true</requiresLineOfSight>
    
    <effects>
      <li Class="TuTien.AbilityEffectDef">
        <effectType>Damage</effectType>
        <magnitude>20</magnitude>
        <damageType>Cut</damageType>
      </li>
    </effects>
  </TuTien.CultivationAbilityDef>

  <!-- Basic Healing Ability -->
  <TuTien.CultivationAbilityDef>
    <defName>Ability_QiHealing</defName>
    <label>Qi Healing</label>
    <description>Use Qi to heal wounds.</description>
    <abilityLabel>Qi Healing</abilityLabel>
    <abilityDescription>Channel Qi to accelerate natural healing.</abilityDescription>
    
    <category>Support</category>
    <qiCost>15</qiCost>
    <cooldownTicks>600</cooldownTicks>
    <requiredRealm>1</requiredRealm>
    <requiredStage>2</requiredStage>
    
    <targetType>Touch</targetType>
    <range>2</range>
    <requiresLineOfSight>true</requiresLineOfSight>
    
    <effects>
      <li Class="TuTien.Abilities.AbilityEffect_Heal">
        <amount>25</amount>
      </li>
    </effects>
  </TuTien.CultivationAbilityDef>

  <!-- Corpse Revival Ability -->
  <TuTien.CultivationAbilityDef>
    <defName>TuTien_CorpseRevival</defName>
    <label>Khôi Lỗi Thuật</label>
    <description>Revive a corpse as a puppet under your control. The puppet is slow and lacks skills, but serves loyally.</description>
    <abilityLabel>Corpse Revival</abilityLabel>
    <abilityDescription>Use forbidden necromantic cultivation to animate the dead.</abilityDescription>
    <iconPath>UI/Icons/CultivationAbilities/CorpseRevival</iconPath>
    <category>Forbidden</category>
    <qiCost>200</qiCost>
    <cooldownTicks>100</cooldownTicks>
    <requiredRealm>2</requiredRealm>
    <requiredStage>3</requiredStage>
    <targetType>Touch</targetType>
    <range>3</range>
    <requiresLineOfSight>true</requiresLineOfSight>
    <effects>
      <li Class="TuTien.Abilities.AbilityEffect_CorpseRevival">
        <qiCost>200</qiCost>
        <puppetPawnKindDef>TuTien_PuppetCorpse</puppetPawnKindDef>
        <healthMultiplier>0.7</healthMultiplier>
        <speedMultiplier>0.5</speedMultiplier>
      </li>
    </effects>
  </TuTien.CultivationAbilityDef>

</Defs>
