  <!-- Simple Iron Sword -->
  <ThingDef ParentName="BaseWeapon">
    <defName>TuTien_TestSword</defName>
    <label>simple cultivation sword</label>
    <description>A basic cultivation sword for testing. A sharp blade infused with cultivation energy.</description>
    
    <!-- Removed custom thingClass and modExtensions to prevent crashes -->
    <!--
    <thingClass>TuTien.Items.CultivationArtifactThing</thingClass>
    
    <modExtensions>
      <li Class="CultivationArtifactModExtension">
        <artifactDef>CultivationArtifact_IronSword</artifactDef>
      </li>
    </modExtensions>
    -->
    
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Longsword</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(0.8, 0.9, 1.0)</color>
    </graphicData>
    
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.8, 0.9, 1.0)</only>
        </li>
        <li>
          <weight>5</weight>
          <only>(0.9, 1.0, 0.8)</only>
        </li>
        <li>
          <weight>5</weight>
          <only>(1.0, 0.8, 0.9)</only>
        </li>
      </options>
    </colorGenerator>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
    </weaponTags>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.8</Mass>
      <MarketValue>800</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>

