<Defs>
  <!-- âœ… Task: Recipes for Crafting Cultivation Artifacts -->

  <!-- Iron Cultivation Sword Recipe -->
  <RecipeDef>
    <defName>Make_IronCultivationSword</defName>
    <label>forge iron cultivation sword</label>
    <description>Forge a basic iron sword and infuse it with cultivation energy.</description>
    <jobString>Forging cultivation sword.</jobString>
    <workAmount>12000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <efficiencyStat>GeneralLaborSpeed</efficiencyStat>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
      <categories>
        <li>StoneBlocks</li>
      </categories>
    </fixedIngredientFilter>
    
    <products>
      <TuTien_IronCultivationSword>1</TuTien_IronCultivationSword>
    </products>
    
    <recipeUsers>
      <li>FueledSmithy</li>
      <li>ElectricSmithy</li>
    </recipeUsers>
    
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    
    <researchPrerequisite>Smithing</researchPrerequisite>
  </RecipeDef>

